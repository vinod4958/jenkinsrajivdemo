pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'build the code'
            }
        }
        stage('test') {
            steps {
                echo 'test the code'
            }
        }
        stage('run') {
            steps {
                echo 'run the code'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy the code'
            }
        }
    }
}
